<resources>

    <style name="BaseTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:statusBarColor">?attr/colorPrimary</item>
    </style>

    <style name="Theme.Koti" parent="BaseTheme">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#cccccc</item>
        <item name="colorPrimaryDark">#4d4d4d</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="Theme.Koti.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Koti.AppBarOverlay" parent="ThemeOverlay.AppCompat.DayNight.ActionBar" />

    <style name="Theme.Koti.PopupOverlay" parent="ThemeOverlay.AppCompat.DayNight" />

</resources>